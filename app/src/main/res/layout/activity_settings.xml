<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.prgguru.android.SettAccess">


    <TextView
        android:id="@+id/tbLogName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Prihlasovacie meno:"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/edLogName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:height="20dp"
        android:layout_below="@+id/tbLogName"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tbPin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="PIN:"
        android:textSize="20dp"
        android:layout_below="@+id/edLogName"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/edPin"
        android:layout_below="@+id/tbPin"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/btnSaveAccess"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Uložiť nastavenia"
        android:textSize="20dp"
        android:layout_below="@+id/tbPin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>
